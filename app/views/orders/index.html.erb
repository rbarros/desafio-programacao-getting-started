<h1><%= t :listing %> <%= t :orders %></h1>

<table>
  <thead>
    <tr>
      <th><%= t :seller %></th>
      <th><%= t :buyer %></th>
      <th><%= t :item %></th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.seller.name %></td>
        <td><%= order.buyer.name %></td>
        <td><%= order.items %></td>
        <td><%= order.qty %></td>
        <td><%= link_to t(:show), order %></td>
        <td><%= link_to t(:edit), edit_order_path(order) %></td>
        <td><%= link_to t(:delete), order, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new) + ' ' + t(:order), new_order_path %>
