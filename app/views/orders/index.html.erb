<h1><%= t '.listing' %></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t '.seller' %></th>
      <th><%= t '.buyer' %></th>
      <th><%= t '.item' %></th>
      <th><%= t '.qty' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.seller.name %></td>
        <td><%= order.buyer.name %></td>
        <td><%= order.item.description %></td>
        <td align="center"><%= order.qty %></td>
        <td><%= link_to t(:show), order %></td>
        <td><%= link_to t(:edit), edit_order_path(order) %></td>
        <td><%= link_to t(:delete), order, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_order_path %>
