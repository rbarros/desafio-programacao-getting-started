<h1><%= t :listing %> <%= t :itmes %></h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= link_to t(:show), item %></td>
        <td><%= link_to t(:edit), edit_item_path(item) %></td>
        <td><%= link_to t(:delete), item, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new) + ' ' + t(:item), new_item_path %>
