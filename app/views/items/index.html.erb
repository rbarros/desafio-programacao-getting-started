<h1><%= t '.listing' %></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t '.description' %></th>
      <th><%= t '.price' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= link_to t(:show), item %></td>
        <td><%= link_to t(:edit), edit_item_path(item) %></td>
        <td><%= link_to t(:delete), item, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_item_path %>
