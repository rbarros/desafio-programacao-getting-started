<h1><%= t :listing %> <%= t :buyers %></h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= link_to t(:show), buyer %></td>
        <td><%= link_to t(:edit), edit_buyer_path(buyer) %></td>
        <td><%= link_to t(:delete), buyer, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new) + ' ' + t(:buyer), new_buyer_path %>
