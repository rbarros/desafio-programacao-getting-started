<h1><%= t '.listing' %></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t '.name' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= link_to t(:show), buyer %></td>
        <td><%= link_to t(:edit), edit_buyer_path(buyer) %></td>
        <td><%= link_to t(:delete), buyer, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_buyer_path %>
